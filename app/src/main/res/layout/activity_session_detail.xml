<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/sessionInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Info"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/availableSpotsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Spots: 0"
            android:layout_marginTop="10dp" />

        <TextView android:id="@+id/participantListLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participants:"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <ListView
            android:id="@+id/participantListView"
            android:layout_width="match_parent"
            android:layout_height="334dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>
</ScrollView>